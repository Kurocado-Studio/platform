{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "internal:build": {
      "cache": false,
      "outputs": ["dist/**"],
      "dependsOn": ["^internal:build"]
    },
    "internal:build:qa": {
      "cache": false,
      "outputs": ["dist/**"],
      "dependsOn": ["^internal:build:qa"]
    },
    "internal:build:domain": {
      "cache": false,
      "outputs": ["dist/**"],
      "dependsOn": ["^internal:build:domain"]
    },
    "setup": {
      "dependsOn": [
        "@internal/config#internal:build",
        "@kurocado-studio/qa#internal:build:qa",
        "^build"
      ],
      "cache": false
    },

    "build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^internal:build", "^internal:build:qa", "^build"]
    },
    "typecheck": {
      "cache": false,
      "dependsOn": ["setup", "^build"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["setup", "^build"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["setup", "^build"]
    },
    "lint:fix": {
      "cache": false,
      "dependsOn": ["setup"]
    },
    "prettier:fix": {
      "cache": false,
      "dependsOn": ["setup"]
    },
    "prettier:check": {
      "cache": false,
      "dependsOn": ["setup", "^build"]
    },
    "dev:internal": {
      "dependsOn": ["setup"],
      "persistent": true
    },
    "dev": {
      "dependsOn": ["setup"],
      "persistent": true
    },
    "dev:storybook": {
      "dependsOn": ["setup"],
      "persistent": true
    },
    "vite:watch": {
      "dependsOn": ["setup"],
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["vite:watch"]
    },
    "preview-storybook": {
      "dependsOn": ["^build"]
    },
    "internal:preflight": {
      "dependsOn": ["^build"]
    },
    "internal:config": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
