    { "path": "domains/design/ui-kit" },
    { "path": "domains/dev-experience/axios-client" },
    { "path": "domains/iam/auth0" },
    { "path": "domains/qa/storybook" },
    { "path": "packages/design/react-ui-kit" },
    { "path": "packages/design/vue-ui-kit" },
    { "path": "packages/dev-experience/axios-node"},
