{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@kurocado-studio/qa/remix/tsconfig.qa",
    "@kurocado-studio/styleguide/remix/tsconfig"
  ],
  "compilerOptions": {
    "types": ["node", "react", "lodash-es"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": [
    "src",
    "tailwind.config.ts",
    "test",
    "tsup.config.ts",
    "setup.remix.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
