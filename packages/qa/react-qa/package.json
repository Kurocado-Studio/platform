    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.5",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "fast-text-encoding": "^1.0.6",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "lodash-es": "^4.17.21",
    "supertest": "^7.0.0",
