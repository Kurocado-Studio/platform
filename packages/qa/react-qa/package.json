  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@internal/config": "workspace:*",
    "@types/react": "19.1.6",
    "commitlint": "19.8.1",
    "copyfiles": "2.4.1",
    "eslint": "9.31.0",
    "prettier": "3.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "semantic-release": "^24.2.7",
    "tsup": "^8.3.6",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
