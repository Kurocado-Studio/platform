{
  "name": "@kurocado-studio/platform",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo node_modules pnpm-lock.yaml",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "dev": "turbo run dev --concurrency=20",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky install",
    "prettier:check": "prettier --check . --ignore-path .prettierignore",
    "prettier:fix": "prettier --check --write . --ignore-path .prettierignore",
    "preview-storybook": "turbo run preview-storybook",
    "semantic-release": "pnpm -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo",
    "setup": "pnpm clean && pnpm i && pnpm build",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "prettier-plugin-sort-imports": "^1.8.6",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "@kurocado-studio/styleguide": "^2.5.2",
    "@kurocado-studio/qa": "workspace:*",
    "commitlint": "^19.8.1",
    "eslint": "9.31",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "*": ["prettier --write"],
    "{apps,packages}.{ts,tsx}": [
      "prettier --write",
      "turbo run lint:fix --",
      "turbo run lint --"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
