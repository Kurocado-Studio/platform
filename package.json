{
  "name": "@kurocado-studio/platform",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset version",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix --",
    "prettier:check": "turbo run prettier:check",
    "prettier:fix": "prettier --write . &&  turbo run prettier:fix",
    "preview-storybook": "turbo run preview-storybook",
    "semantic-release-monorepo": "pnpm -r exec -- npx --no-install semantic-release -e semantic-release-monorepo",
    "semantic-release": "pnpm run changeset && pnpm run semantic-release-monorepo",
    "setup": "pnpm i && turbo run setup",
    "test": "turbo run test",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@kurocado-studio/styleguide": "^2.3.2",
    "commitlint": "^19.8.0",
    "eslint": "9.23",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "turbo": "^2.0.3"
  },
  "lint-staged": {
    "*": ["prettier --write"],
    "{apps,workspace,packages}.{ts,tsx}": [
      "prettier --write",
      "turbo run lint:fix --",
      "turbo run lint --"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
