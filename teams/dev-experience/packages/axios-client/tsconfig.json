{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@kurocado-studio/qa/web/tsconfig.qa",
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "setup.web.ts",
    "tailwind.config.ts",
    "test",
    "tsup.config.ts",
    "vitest.config.ts",
    "src/globals.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
