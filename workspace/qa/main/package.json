    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "lodash-es": "^4.17.21",
    "react-dom": "19.0.0",
    "supertest": "^7.1.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "util": "^0.12.5",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@kurocado-studio/styleguide": "2.3.2",
